rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to users' own data (example)
    // Assumes you have a collection 'users' where each document ID is a user's UID
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to shared lists (example, adjust path as needed)
    // Assumes you have a collection 'lists'
    // This rule allows any authenticated user to read/write any list.
    // You might want to refine this to allow only specific users to write to specific lists.
    match /lists/{listId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Add other rules for other collections as needed
  }
}
